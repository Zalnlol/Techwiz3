<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="fpt.aptech.hss">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Hss"
        tools:targetApi="31">
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/File slide_in_from_right" />

        <activity
            android:name=".Screen.ClassroomListActivity"
            android:exported="false" />
        <activity
            android:name=".Screen.MainActivity"
            android:exported="false" />
        <activity
            android:name=".Screen.QRActivity"
            android:exported="false" />
        <activity
            android:name=".Screen.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".Screen.FlashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Screen.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".Screen.GetStartedActivity"
            android:exported="false" />
    </application>

</manifest>