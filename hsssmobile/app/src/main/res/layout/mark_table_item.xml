<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F5F5F5"
    app:cardCornerRadius="2dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMarkName"
            android:layout_width="327dp"
            android:layout_height="match_parent"
            android:background="@xml/vien_bang"
            android:fontFamily="sans-serif-black"
            android:padding="10dp"
            android:text="Notification Tile 1 "
            android:textColor="#29303E"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/linearmarktable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvName1"
                android:layout_width="181dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@xml/vien_bang"
                android:fontFamily="sans-serif-black"
                android:padding="10dp"
                android:text="Notification Tile 1 "
                android:textColor="#29303E"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvdMarkDate"
                android:layout_width="79dp"
                android:layout_height="match_parent"
                android:background="@xml/vien_bang"
                android:fontFamily="sans-serif-black"
                android:padding="10dp"
                android:text="Expires in 2 days"
                android:textColor="#29303E"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvMarkScore"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:background="@xml/vien_bang"
                android:fontFamily="sans-serif-black"
                android:padding="10dp"
                android:text="Expires in 2 days"
                android:textColor="#29303E"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvdMarkRemark"
                android:layout_width="82dp"
                android:layout_height="match_parent"
                android:background="@xml/vien_bang"
                android:fontFamily="sans-serif-black"
                android:padding="10dp"
                android:text="Expires in 2 days"
                android:textColor="#29303E"
                android:textSize="10sp" />

        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>